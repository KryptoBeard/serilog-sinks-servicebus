<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.5</Version>
    <PackageProjectUrl>https://github.com/KryptoBeard/serilog-sinks-servicebus</PackageProjectUrl>
    <RepositoryUrl>https://github.com/KryptoBeard/serilog-sinks-servicebus</RepositoryUrl>
    <Description>Serilog Sink for Azure Service Bus. Supports managed identity.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Identity" Version="1.8.2" />
    <PackageReference Include="Azure.Messaging.ServiceBus" Version="7.13.1" />
    <PackageReference Include="Serilog" Version="2.12.0" />
  </ItemGroup>

</Project>
